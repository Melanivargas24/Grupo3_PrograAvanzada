@page "{id:int}"
@model Hospital.Pages.Expedientes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Expediente";
}

<h1>Eliminar Expediente</h1>

<h4>¿Estás seguro que deseas eliminar este expediente?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID del Paciente</dt>
        <dd class="col-sm-10">@Model.Expediente.PacienteId</dd>

        <dt class="col-sm-2">Medicamentos</dt>
        <dd class="col-sm-10">@Model.Expediente.Medicamentos</dd>

        <dt class="col-sm-2">Tratamientos</dt>
        <dd class="col-sm-10">@Model.Expediente.Tratamientos</dd>

        <dt class="col-sm-2">Historial</dt>
        <dd class="col-sm-10">@Model.Expediente.Historial</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Expediente.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>