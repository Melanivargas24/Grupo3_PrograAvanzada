@page
@model Hospital.Pages.Admin.editModel

@{
    ViewData["Title"] = "edit";
}
<div class="container-cita mt-5">

<h1>Editar</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
        <div class="row justify-content-center">
        <form method="post">
                <input type="hidden" asp-for="Paciente.Id" />
                <input type="hidden" asp-for="Paciente.Usuario.Id" />

            <div class="form-group">
                
                <label asp-for="Paciente.Usuario.Nombre" class="control-label"></label>
                <input asp-for="Paciente.Usuario.Nombre" class="form-control" />
                <span asp-validation-for="Paciente.Usuario.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Paciente.Usuario.Apellido" class="control-label"></label>
                <input asp-for="Paciente.Usuario.Apellido" class="form-control" />
                <span asp-validation-for="Paciente.Usuario.Apellido" class="text-danger"></span>
            </div>
                <div class="form-group">

                    <label asp-for="Paciente.Usuario.Telefono" class="control-label"></label>
                    <input asp-for="Paciente.Usuario.Telefono" class="form-control" />
                    <span asp-validation-for="Paciente.Usuario.Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="Paciente.Usuario.Direccion" class="control-label"></label>
                    <input asp-for="Paciente.Usuario.Direccion" class="form-control" />
                    <span asp-validation-for="Paciente.Usuario.Direccion" class="text-danger"></span>
                </div>
            <div class="form-group">
                
                <label asp-for="Paciente.Usuario.Email" class="control-label"></label>
                <input asp-for="Paciente.Usuario.Email" class="form-control" />
                <span asp-validation-for="Paciente.Usuario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Paciente.Usuario.Clave" class="control-label"></label>
                <input asp-for="Paciente.Usuario.Clave" class="form-control" />
                <span asp-validation-for="Paciente.Usuario.Clave" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
