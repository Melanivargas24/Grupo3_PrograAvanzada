@page
@model Hospital.Pages.Admin.editMedicoModel

@{
    ViewData["Title"] = "Editar Medico";
}
<div class="container-cita mt-5">

    <h1>Editar</h1>

    <h4>Medico</h4>
    <hr />
    <div class="row">
        <div class="row justify-content-center">
            <form method="post">
                <input type="hidden" asp-for="Medico.IdMedico" />
                <input type="hidden" asp-for="Medico.Usuario.Id" />

                <div class="form-group">
                    <label asp-for="Medico.Usuario.Nombre" class="control-label"></label>
                    <input asp-for="Medico.Usuario.Nombre" class="form-control" />
                    <span asp-validation-for="Medico.Usuario.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.Usuario.Apellido" class="control-label"></label>
                    <input asp-for="Medico.Usuario.Apellido" class="form-control" />
                    <span asp-validation-for="Medico.Usuario.Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.Usuario.Telefono" class="control-label"></label>
                    <input asp-for="Medico.Usuario.Telefono" class="form-control" />
                    <span asp-validation-for="Medico.Usuario.Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.Usuario.Direccion" class="control-label"></label>
                    <input asp-for="Medico.Usuario.Direccion" class="form-control" />
                    <span asp-validation-for="Medico.Usuario.Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.Usuario.Email" class="control-label"></label>
                    <input asp-for="Medico.Usuario.Email" class="form-control" />
                    <span asp-validation-for="Medico.Usuario.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.IdEspecialidad" class="control-label"></label>
                    <select asp-for="Medico.IdEspecialidad" class="form-control"
                            asp-items="@(new SelectList(Model.Especialidades, "IdEspecialidad", "Nombre"))">
                        <option value="">Seleccione una especialidad</option>
                    </select>
                    <span asp-validation-for="Medico.IdEspecialidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Medico.Usuario.Clave" class="control-label"></label>
                    <input asp-for="Medico.Usuario.Clave" class="form-control" />
                    <span asp-validation-for="Medico.Usuario.Clave" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Volver a la lista</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
